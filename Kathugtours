  <script>
    function addPhoto() {
      let container = document.getElementById("photo-area");
      let img = document.createElement("img");
      img.src = "https://source.unsplash.com/600x400/?kenya,nature&" + new Date().getTime();
      img.style.width = "300px";
      img.style.margin = "10px";
      img.style.borderRadius = "10px";
      container.appendChild(img);
    }
  </script>
